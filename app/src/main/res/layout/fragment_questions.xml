<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.QuestionsActivity$PlaceholderFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Q3)Whistler was the codename of this Microsoft Operating System."
        android:id="@+id/Question"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@id/Question">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/ans1"
                android:background="@drawable/my_button_bg"
                android:text="Windows XP"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/ans2"
                android:layout_marginLeft="2dp"
                android:background="@drawable/my_button_bg"
                android:text="Windows 7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/ans3"
                android:background="@drawable/my_button_bg"
                android:text="WIndows Vistas"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/ans4"
                android:background="@drawable/my_button_bg"
                android:text="None of the above"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
